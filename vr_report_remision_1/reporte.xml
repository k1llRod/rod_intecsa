<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
                id="report_rem"
                string="Nota de Remisión - Interior"
                model="stock.picking"
                report_type="qweb-pdf"
                name="vr_report_remision.report_remision"
                file="vr_report_remision.report_remision"
        />
        <template id="report_remision">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
                            <table style="width: 100%;">
                                <colgroup>
                                    <col style="width: 45%"/>
                                    <col style="width: 45%"/>
                                    <col style="width: 10%"/>
                                </colgroup>
                                <thead>
                                    <tr>
                                        <td colspan="2">
                                            <div class="panel" style="text-align:left;">
                                                <h4>SALUR S.R.L. DISTRIBUCIONES Y REPRESENTACIONES</h4>
                                            </div>
                                        </td>
                                        <td rowspan="2" style="padding:0px 0 0px 0; vertical-align:top; text-align:center;" >
                                            <img style="width: 150px; height: 150px;"
                                                     t-att-src="image_data_uri(o.company_id.logo)"
                                                     alt="Logo"/>
                                            <p><span t-field="o.name"> </span></p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <!--<td style="padding:20px 0 0px 0;vertical-align:top;text-align:left;">Fact. Nª </td>-->
                                        <td colspan="2" style="padding:20px 0 0px 0;vertical-align:top;text-align:center;">Fecha: <span t-esc="o.today_date.strftime(' %A, %d de %B del %Y')"></span></td>

                                    </tr>
                                </thead>
                                <tr>
                                        <td colspan="3">
                                            <div class="panel" style="padding:0px 0 0px 0;vertical-align:top;text-align:center;">
                                                <h3>NOTA DE REMISION AL INTERIOR</h3>
                                            </div>
                                        </td>
                                </tr>
                            </table>
                            <div class="container">
                                <div class="row" style="padding-bottom:5px;">
									<div class="col-6" style="text-transform: uppercase; font-size:12px"><strong>Señor(es):</strong> <span t-field="o.partner_id.name"></span></div>
								</div>
                                <div class="row" style="padding-bottom:5px;">
									<div class="col-6" style="text-transform: uppercase; font-size:12px"><strong>Dirección:</strong> <span t-field="o.partner_id.street"></span></div>
                                    <div class="col-6" style="text-transform: uppercase; font-size:12px"><strong>Ciudad:</strong> <span t-field="o.partner_id.city"></span></div>
								</div>
                                <div class="row" style="padding-bottom:5px;">
									<div class="col-6" style="text-transform: uppercase; font-size:12px"><strong>Vendedor:</strong> <span t-field="o.sale_id.user_id"></span></div>
								</div>
                            </div>
                            <table class="table table-sm mt16 o_pfpv_table_move_lines" t-if="o.move_line_ids and o.state=='done'">
                                <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')" />
                                <t t-set="total_subtotal" t-value="0"/>
                                <t t-set="total_taxes" t-value="0"/>
                                <thead>
                                    <tr>
                                        <th width="15%"><strong>Code</strong></th>
                                        <th class="text-center" width="20%"><strong>Quantity</strong></th>
                                        <th><strong>Description</strong></th>
                                        <!--<th name="lot_serial" t-if="has_serial_number" groups="stock.group_lot_on_delivery_slip">
                                            Lot/Serial Number
                                        </th>
                                        <th class="text-right" width="15%"><strong>Price</strong></th>
                                        <th class="text-right" width="15%"><strong>Subtotal</strong></th>-->
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.move_line_ids" t-as="move_line">
                                        <t t-set="price_subtotal" t-value="move_line.move_id.sale_line_id.price_reduce * move_line.qty_done"/>
                                        <t t-set="total_subtotal" t-value="total_subtotal + price_subtotal"/>
                                        <t t-set="total_taxes" t-value="total_taxes + (move_line.move_id.sale_line_id and move_line.move_id.sale_line_id.price_tax / move_line.move_id.sale_line_id.product_uom_qty * move_line.qty_done or 0)"/>
                                        <td>
                                            <span t-field="move_line.product_id.default_code"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="move_line.qty_done"/>
                                            <span t-field="move_line.product_uom_id"/>
                                        </td>
                                        <td>
                                            <span t-field="move_line.product_id.name"/>
                                            <t t-if="o.picking_type_code == 'outgoing' and move_line.product_id.sudo().description_pickingout != ''">
                                                <div t-field="move_line.product_id.sudo().description_pickingout"/>
                                            </t>
                                            <t t-if="o.picking_type_code == 'incoming' and move_line.product_id.sudo().description_pickingin != ''">
                                                <div t-field="move_line.product_id.sudo().description_pickingin"/>
                                            </t>
                                        </td>
                                        <!--<td t-if="has_serial_number and move_line.lot_name" groups="stock.group_lot_on_delivery_slip">
                                            <span t-field="move_line.lot_name"/>
                                        </td>
                                        <td t-elif="has_serial_number" groups="stock.group_lot_on_delivery_slip">
                                            <span t-field="move_line.lot_id.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="move_line.move_id.sale_line_id.price_reduce"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="price_subtotal" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>-->
                                    </tr>
                                </tbody>
                            </table>
                            <!--<div class="clearfix">
                                <div id="total" class="row">
                                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                        <table class="table table-sm">
                                            <tr class="border-black o_subtotal" style="">
                                                <td>Subtotal</td>
                                                <td class="text-right">
                                                    <span t-esc="total_subtotal" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                                </td>
                                            </tr>
                                            <tr class="border-black o_total">
                                                <td>Taxes</td>
                                                <td class="text-right">
                                                    <span t-esc="total_taxes" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                                </td>
                                            </tr>
                                            <tr class="border-black o_total">
                                                <td>Total</td>
                                                <td class="text-right">
                                                    <span t-esc="total_taxes + total_subtotal" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <t t-if="   o.sale_id and o.move_line_ids">
                                <table class="table table-sm mt32">
                                    <thead>
                                        <tr>
                                            <th class="text-right"><strong>Untaxed Amount</strong></th>
                                            <th class="text-right"><strong>Taxes</strong></th>
                                            <th class="text-right"><strong>Total</strong></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="text-right">
                                                <span t-field="o.amount_untaxed"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.amount_tax"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.amount_total"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>-->
                            <tr>
                                <td colspan="6" style="text-transform:uppercase;">
                                                SON:
                                    <span t-field="o.total_to_word"/>
                                        <span> BOLIVIANOS</span>
                                </td>
                            </tr>
                            <table class="container" style="width:100%; font-size:12px; font-family:Arial; border:1px solid #000;" border="1" cellpadding="0" cellspacing="0">
                                <tbody>
                                    <tr style="height: 18px;">
                                        <td style="width: 33.3333%; text-align: center; height: 18px; border:1px solid #999; padding:10px;"><strong>RECIBIDO CONFORME</strong></td>
                                        <td style="width: 33.3333%; text-align: center; height: 18px; border:1px solid #999; padding:10px;"><strong>ENTREGUÉ CONFORME</strong></td>
                                        <td style="width: 33.3333%; text-align: center; height: 18px; padding:10px;"><strong>OBSERVACIONES</strong></td>
                                    </tr>
                                    <tr style="height: 91px;">
                                        <td style="width: 33.3333%; height: 91px;border:1px solid #999; padding:10px;">
                                            <p>&amp;nbsp;</p>
                                            <p>&amp;nbsp;</p>
                                            <p>Firma:</p>
                                            <p>Nombre:</p>
                                            <p>Fecha;</p>
                                        </td>
                                        <td style="width: 33.3333%; height: 91px; border:1px solid #999; padding:10px;">
                                            <p>&amp;nbsp;</p>
                                            <p>&amp;nbsp;</p>
                                            <p>Firma:</p>
                                            <p>Nombre:</p>
                                            <p>Fecha;</p>
                                        </td>
                                        <td style="width: 33.3333%; height: 91px; border:1px solid #999;">&amp;nbsp;</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
