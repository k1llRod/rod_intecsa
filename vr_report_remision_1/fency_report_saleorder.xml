<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

	<report
                id="report_rem_customer"
                string="Nota de Entrega"
                model="sale.order"
                report_type="qweb-pdf"
                name="vr_report_remision.fency_report_saleorder_document"
                file="vr_report_remision.fency_report_saleorder_document"
        />
        <template id="fency_report_saleorder_document">

            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <t t-set="p" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
            <div class="header" style="border: 1px solid black;">
                <div class="row mt32 mb32">
                    <div class="col-4 text-center" style="border-right: 1px solid black;">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 50px;" />
                    </div>
                    <div class="col-4 text-center" style="border-right: 1px solid black;">
                        <h2>
                            <span><font>PROFORMA </font></span>
                            <font><span t-field="p.name"/></font>
                        </h2>
                    </div>
                    <div class="col-4 text-center" style="font:12px lucida-console,sans-serif !important;">
                        <span t-field="company.partner_id" style="font:16px"/>
                        <br/>
                        <span t-field="company.partner_id.street" />
                        <br/>
                        <span t-field="company.partner_id.street2" />
                        <br/>
                        <span t-field="company.partner_id.phone" />
                        <br/>
                        <span t-field="company.partner_id.city" />
                        <br/>
                        <span t-field="company.partner_id.country_id" />
                        <br/>
                    </div>
                </div>
            </div>

            <t t-call="web.external_layout">
                <t t-set="o" t-value="doc.with_context({'lang':doc.partner_id.lang})" /> 
		<div class="page" style="border: 0px solid black; min-height: 100%;">
                    <div class="oe_structure" />                 
                        <div class="row mt32 mb32" style="border: 0px solid black;">
                            <div class="col-6 "><br/>
                                    <!--<span t-esc="o.today_date.strftime(' %A, %d de %B del %Y')"></span><br/>-->
				    <span t-field="o.date_order" t-options="{'format': 'EEEE, d '}"/>
                                de
                                <span t-field="o.date_order" t-options="{'format': 'MMMM '}"/>
                                del
                                <span t-field="o.date_order" t-options="{'format': 'YYYY'}"/><br/>
                                <strong>Señor (es):</strong><br/>
                                    <span t-field="o.partner_id" /><br/>
                                    <span t-if="o.partner_id.street" 
                                        t-field="o.partner_id.street" /><br/>
                                    <span t-if="o.partner_id.street2"
                                        t-field="o.partner_id.street2" />
                                    <span t-if="o.partner_id.city" t-field="o.partner_id.city" />
                                    <span t-if="o.partner_id.state_id" 
                                        t-field="o.partner_id.state_id" />
                                    <span t-if="o.partner_id.country_id" t-field="o.partner_id.country_id" />

                            </div>
                            <div class="col-6 text-left"><br/>
                                <strong t-if="o.vr_validez">Validéz: </strong>
                                    <span t-if="o.vr_validez" t-field="o.vr_validez" /><br/>
                                <strong t-if="o.vr_garantia">Garantía: </strong>
                                    <span t-if="o.vr_garantia" t-field="o.vr_garantia" /><br/>
                                <strong t-if="o.vr_entrega">Entrega: </strong>
                                    <span t-if="o.vr_entrega" t-field="o.vr_entrega" /><br/>
				<strong t-if="o.vr_fpago">Forma de pago: </strong>
                                    <span t-if="o.vr_fpago" t-field="o.vr_fpago" />
                                <!--<strong>Shipping Address:</strong><br/>
                                    <span t-field="o.partner_shipping_id" />
                                    <br/>
                                    <span t-field="o.partner_shipping_id.street" />
                                    <br/>
                                    <span t-field="o.partner_shipping_id.street2" />
                                    <br/>
                                    <span t-field="o.partner_shipping_id.city" />
                                    <br/>
                                    <span t-field="o.partner_shipping_id.state_id" />
                                    <span t-field="o.partner_shipping_id.country_id" />
                                    <br/>-->
                            </div>
                        </div>

                        <!-- Is there a discount on at least one line? -->
                        <t t-set="display_discount" t-value="any([l.discount for l in o.order_line])" />
                        <table class="table" style="border: 1px solid black;">
			    <col width="80%"/>
                       	    <col width="10%"/>
                            <col width="12%"/>
                            <col width="12%"/>	
                            <thead>
                                <tr style="border: 0px solid black;">
                                    <th style="border-right: 1px solid black; border-left: 1px solid black; border-top: 1px solid black;  border-button: 1px solid black;">Description</th>
                                    <th class="text-right" style="border-right: 1px solid black; border-top: 1px solid black; border-button: 1px solid black;">Cant.</th>
                                    <th class="text-right" style="border-right: 1px solid black; border-top: 1px solid black; border-button: 1px solid black;">P. U.</th>
                                    <!--<th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line" style="background-color:#3498DB !important;color:#FFF !important;">Disc.(%)</th>-->
                                    <!--<th class="text-right" style="background-color:#3498DB !important;color:#FFF !important;">Taxes</th>-->
                                    <th class="text-right" style="border-right: 1px solid black; border-top: 1px solid black; border-button: 1px solid black;">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody" style="min-height: 100%; font-size:12px;">
                                <t t-foreach="doc.order_line" t-as="l">
                                    <tr t-if="l.product_uom_qty">
                                        <td style="border-right: 1px solid black; border-left: 1px solid black; border-right: 1px solid black;">
                                            <span t-field="l.name" />
                                        </td>
                                        <td class="text-right" style="border-right: 1px solid black; font-size:14px;">
                                            <span t-field="l.product_uom_qty" />
                                            <span groups="product.group_uom" t-field="l.product_uom" />
                                        </td>
                                        <td class="text-right" style="border-right: 1px solid black; font-size:14px;">
                                            <span t-field="l.price_unit" />
                                        </td>
                                        <!--<td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                            <span t-field="l.discount" />
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))" />
                                        </td>-->
					<td class="text-right" style="border-right: 1px solid black; font-size:14px;">
                                            <t t-set="t_total" t-value="l.product_uom_qty*l.price_unit"/>
                                            <t t-esc="'{0:,.2f}'.format(t_total)"/>
                                        </td>
                                        <!--<td class="text-right" style="border-right: 1px solid black; font-size:14px;">
                                            <span t-field="l.price_subtotal" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}' />
                                        </td>-->
                                    </tr>
				    <tr t-if="l.display_type == 'line_note'">
                                           <td style="border-left:1px solid #000; border-right:1px solid #000;">
                                             <span class="o_field_text"
                                                  t-field="l.name" t-options="{'widget': 'text'}"/>
                                           </td>
                                         <td class="text-center" style="border-right:1px solid #000;">
                                            &amp;nbsp;
                                        </td>
                                        <td class="text-right" style="border-right:1px solid #000;">
                                            &amp;nbsp;
                                        </td>
                                        <td class="text-right" style="border-right:1px solid #000;">
                                            &amp;nbsp;
                                        </td>
                                    </tr>
				    <!--<tr t-foreach="range(max(15-len(l.order_line),0))" t-as="m">
                                	<td style="border-right:1px solid #000;">&amp;nbsp;</td>
                                	<td style="border-right:1px solid #000;"></td>
                                	<td style="border-right:1px solid #000;"></td>
                                	<td style="border-right:1px solid #000;"></td>
                            	    </tr>-->
                                </t>
				<!--<tr t-foreach="range(max(10-len(o.order_line),0))" t-as="m">
                                        <td style="border-right:1px solid #000;">&amp;nbsp;</td>
                                        <td style="border-right:1px solid #000;"></td>
                                        <td style="border-right:1px solid #000;"></td>
                                        <td style="border-right:1px solid #000;"></td>
                                </tr>-->
                            </tbody>
                        </table>
				
                    </div>
                    <!--<div  name="total">
                        <div class="col-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td><strong>Total Without Taxes</strong></td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}' />
                                    </td>
                                </tr>
                                <tr>
                                    <td>Taxes</td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_tax" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}' />
                                    </td>
                                </tr>
                                <tr >
                                    <td style="background-color:#3498DB !important;color:#FFF !important;"><strong>Total</strong></td>
                                    <td class="text-right" style="background-color:#3498DB !important;color:#FFF !important;">
                                        <span t-field="doc.amount_total" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}' />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br/><br/><br/><br/><br/><br/><br/><br/>
                    <div style=" background-color: #3498DB; color:#fff !important; font:15px lucida-console,sans-serif !important; ">
                        <p t-if="doc.note">
                            <strong><span>Note:</span> </strong> <span t-field="doc.note" />
                        </p>
                    </div>
                    <div style=" background-color: #3498DB; color:#fff !important; font:15px lucida-console,sans-serif !important;">
                        <p t-if="doc.payment_term_id ">
                            <strong> <span>Payment Term :</span></strong><span t-field="doc.payment_term_id" />
                        </p>
                    </div>
                    <div class="oe_structure" />-->
                <div  name="total">
                        <div class="col-4 pull-right">
                            <table class="table table-condensed">
                                <!--<tr class="border-black">
                                    <td><strong>Total Without Taxes</strong></td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}' />
                                    </td>
                                </tr>-->
                                <!--<tr>
                                    <td>Taxes</td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_tax" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}' />
                                    </td>
                                </tr>-->
                                <tr >
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_total" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}' />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br/><br/><br/><br/><br/><br/><br/><br/>
                    <div>
                        <p t-if="doc.note">
                            <strong><span>Note:</span> </strong> <span t-field="doc.note" />
                        </p>
                    </div>
                    <div>
                        <p t-if="doc.payment_term_id ">
                            <strong> <span>Payment Term :</span></strong><span t-field="doc.payment_term_id" />
                        </p>
                    </div>
		    <div>
                        <div>
                            <!--<h2>
                                <span ><font color="#000000">Order# </font></span>
                                <font color="#000000"><span t-field="o.name"/></font>
                            </h2>-->

                            <div class="row mt32 mb32" style="border: 1px solid black;">
                                <!--<div class="col-3">
                                    <font color="#000000">
                                    <strong>Your Reference:</strong>
                                    <p t-field="o.client_order_ref"/></font>
                                </div>

                                    <div class="col-3" t-if="o.date_order">
                                    <font color="#000000">
                                    <strong>Order Date:</strong>
                                    <p t-field="o.date_order"/></font>
                                </div>-->
			         <div class="col-4" t-if="o.user_id">
                                    <font color="#000000">
                                    <strong>Vendedor:</strong>
                                    <p t-field="o.user_id"/></font>
                                </div>
			        <!--<div class="col-3" t-if="o.user_id.login">
                                    <font color="#000000">
                                    <strong> Tel.:</strong>
                                    <p t-field="o.user_id.login"/></font>
                                </div>-->

                                <div class="col-4" t-if="o.user_id.phone">
                                    <font color="#000000">
                                    <strong> Tel.:</strong>
                                    <p t-field="o.user_id.phone"/></font>
                                </div>
				<div class="col-4" t-if="o.user_id.email">
                                    <font color="#000000">
                                    <strong> Email::</strong>
                                    <p t-field="o.user_id.email"/></font>
                                </div>
				<div class="col-4" t-if="o.user_id.mobile">
                                    <font color="#000000">
                                    <strong> Celular.:</strong>
                                    <p t-field="o.user_id.mobile"/></font>
                                </div>

                                <!--<div class="col-3" t-if="o.user_id">
                                    <font color="#000000">
                                    <strong>Sales Person:</strong>
                                    <p t-field="o.user_id"/></font>
                                </div>-->

                                <!--<div class="col-3" t-if="o.user_id">
                                    <font color="#000000">
                                    <strong>Validez:</strong>
                                    <p t-field="o.vr_validez"/></font>
                                </div>-->
                            </div>
                        </div>
		    </div>
                    <div class="oe_structure"/>

            </t>
	   
        </template>


    </data>
</odoo>
