<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.cron" id="cancel_sale_orders_validity_date_expired">
        <field name="name">Cancel sales orders after validity date</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="state">code</field>
        <field name="code">model.validity_auto_cancel()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>
    <record model="ir.cron" id="cancel_stock_picking_validity_date_expired">
        <field name="name">Cancel stock picking after validity date</field>
        <field name="model_id" ref="model_stock_picking"/>
        <field name="state">code</field>
        <field name="code">model.picking_auto_cancel()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>
</odoo>
