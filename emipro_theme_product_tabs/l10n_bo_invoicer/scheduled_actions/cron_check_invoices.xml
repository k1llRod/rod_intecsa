<odoo>

    <data>

         <record model="ir.cron" forcecreate="True" id="vr_cron_check_pending_invoices">
            <field name="name">Comprobar facturas pendientes</field>
            <field name="model_id" ref="model_vr_operations"/>
            <field name="state">code</field>
            <field name="code">model.check_pending_invoices()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now(pytz.timezone('America/La_Paz')).replace(hour=4, minute=0, second=0) + timedelta(minutes=15)).strftime('%Y-%m-%d %H:%M:%S')" />
            <field name="doall" eval="False"/>
        </record>

    </data>

</odoo>