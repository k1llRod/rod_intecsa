<odoo>

    <data>

        <record id="view_product_product_form" model="ir.ui.view">
            <field name="name">view.product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook/page[last()]" position="after">
                    <page name="vr_siat_fields" string="Facturación Electrónica">
                        <group>
                            <group>
                                <field name="vr_codigo_producto"/>
                                <field name="vr_codigo_actividad"/>
                            </group>
                            <group>
                                <field name="vr_codigo_unidad_medida"/>
                                <field name="vr_tipo_nombre_producto"/>
                            </group>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

    </data>

</odoo>