<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wizard_lcv_export" model="ir.ui.view">
            <field name="name">Libro de Ventas</field>
            <field name="model">lcv.export.wizard</field>
            <field name="arch" type="xml">
                <form string="Libro de Compras y Ventas">
                    <field name="type" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="name" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <group states="choose" string="Parametros LCV">
                        <label for="year" string="A침o"/>
                        <div>
                            <field name="year" class="oe_inline"/>
                            Periodo:
                            <field name="period" style="width:130px !important;" class="oe_inline"/>
                            <field name="date_init" style="width:130px !important;" class="oe_inline"/>
                            <field name="date_end" style="width:130px !important;" class="oe_inline"/>
                        </div>
                        <field name="all_sales" attrs="{'invisible': [('type','not in',['ventas','pos'])]}" />
                        <field name="warehouse_id" attrs="{'invisible': ['|',('type','not in',['ventas','pos']),('all_sales','=',True) ]}"/>
                        <field name="dosificacion_id" attrs="{'invisible': ['|',('type','not in',['ventas','pos']),('all_sales','=',True)]}"
                               domain="['|',('sucursal_id', '=', warehouse_id)]" />
                        <field name="format"/>

                    </group>
                    <div states="get">
                        <h2>Exportaci칩n Completa</h2>
                        <p>Haga clic en el siguiente enlace:
                            <field name="data" readonly="1" filename="name"/>
                        </p>
                    </div>
                    <footer states="choose">
                        <button name="act_getfile" string="Exportar" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancelar" type="object" class="btn-default"/>
                    </footer>
                    <footer states="get">
                        <button special="cancel" string="Cerrar" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_lcv_ventas" model="ir.actions.act_window">
            <field name="name">Libro de Ventas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lcv.export.wizard</field>
            <field name="context">{'default_type': 'ventas'}</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <record id="action_wizard_lcv_compras" model="ir.actions.act_window">
            <field name="name">Libro de Compras</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lcv.export.wizard</field>
            <field name="context">{'default_type': 'compras'}</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
